
<div class='container'>
  <div class='row'>
    <div class="col-md-2 d-flex align-items-center justify-content-center">
      <%= render "sidebar", genres: @genres %>
    </div>
    <div class="col-md-10">
      <h4 class="mt-5"><strong>商品一覧<span class="font">(全<%= @items.count %>件)</span></strong></h4>
      <div class="row mx-auto pb-5">
        <% @items.each do |item| %>
          <%= link_to item_path(item.id), class: "col-3 text-center text-dark text-nowrap mt-5" do %>
            <%= image_tag item.image, :size => '200x150' %><br>
            <%= item.name %><br>
            ￥<%= item.price.to_s(:delimited) %>
          <% end %>
        <% end %>
     </div>
     <div class="col-md-5 mx-auto mt-5"><%= paginate @items %></div>
    </div>
  </div>
</div>
