
<div class='container'>
  <div class='row'>

    <div class="col-md-12">
      <h4><strong>商品一覧</strong><span class="font">(全<%= @items.count %>件)</span></h4>
      <div class="row mx-auto">
        <% @items.each do |item| %>
          <%= link_to item_path(item.id), class: "col-3 text-center text-dark text-nowrap mt-5" do %>
            <%= image_tag item.image, :size => '200x150' %><br>
            <%= item.name %><br>
            ￥<%= item.price.to_s(:delimited) %>
          <% end %>
        <% end %>
     </div>
     <%= paginate @items %>
    </div>
  </div>
</div>
