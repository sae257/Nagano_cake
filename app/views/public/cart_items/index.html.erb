<h4>ショッピングカート</h4>
<table>
  <thead>
   <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
   </tr>
  </thead>

 <tbody>
 <% if current_customer.cart_items.present? %>
    <% @cart_items.each do |cart_item| %>
     <tr>
       <td>
         <!--%= image_tag cart_item.item.item_image, :size => '50x50' %>-->
         <%= cart_item.item.name %>
       </td>
       <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
       <td>
         <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
           <%= f.number_field :quantity, min: 1, max:10, id: "quantity_cart"%>
           <%= f.submit "更新",class: "btn btn-success" %>
         <% end %>
       </td>
       <td>
         <%= cart_item.subtotal %>
       </td>
       <td>
         <%= link_to "削除する", cart_item_path(cart_item.id, cart_item), method: :delete,class: "btn btn-danger" %>
       </td>
     </tr>
  <% end %>
  </tbody>
<%= link_to "買い物を続ける", root_path, class: 'btn btn-primary btn-sm' %>
<table class="table">
   <tr>
    <th>合計金額</th>
    <td><%= @total.round%></td>
   </tr>
</table>
<p class="text-center"><%= link_to "情報入力に進む", new_order_path, class: 'btn btn-success' %></p>

  <% else %>
        <p>現在カートに商品は入っていません。</p>
        <%= link_to "商品一覧へ", items_path, class: 'btn btn-outline-info mt-5' %>
  <% end %>