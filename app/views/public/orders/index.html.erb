<h3>注文履歴一覧</h3>

<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>

  <tbody>
  <% @orders.each do |order|%>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>〒<%= order.shipping_post_code %><br>
          <%= order.shipping_address %><br>
          <%= order.shipping_name %>
      </td>

      <td>
        <% order.order_items.each do |order_item|%>
        ・<%= order_item.item.name %>
        <% end %>
      </td>

      <td><%= order.total_price %>円</td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order), class: "btn-sm btn-primary"%></td>
    </tr>
  <% end %>
  </tbody>
  </thead>
</table>
