<h4>注文情報確認</h4>

<table class="table table-bordered">
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
    <tbody>

  <% total = 0 %>
  <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <!--%= image_tag cart_item.item.item_image, :size => '50x50' %>-->
          <%= cart_item.item.name %>
        </td>

        <td>
          <%= (cart_item.item.price*1.10).to_i %>
        </td>

        <td>
          <%= cart_item.quantity %>
        </td>

        <td>
          <% subtotal = ((cart_item.item.price*cart_item.quantity)*1.10).to_i %>
          <%= subtotal %>
        </td>
      </tr>
    <% total += (cart_item.item.price*cart_item.quantity)*1.10 %>
  <% end %>
  </tbody>
</table>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <th>送料</th>
        <td><%= @order.postage %></td>
      </tr>

      <tr>
        <th>商品合計</th>
        <td><%= @total.to_i %></td>
      </tr>

      <tr>
        <th>請求額</th>
        <td><%= (@total_price = @order.postage + @total).to_i %></td>
      </tr>
    </tbody>
  </table>

  <h6>支払方法</h6>
    <%= @order.payment_method_i18n %>

  <h6>お届け先</h6>
        〒<%= @order.shipping_post_code %>
          <%= @order.shipping_address %></br>
          <%= @order.shipping_name %>

  <%= form_with model: @order, url: orders_path, method: :post do |f| %>
    <%= f.hidden_field :shipping_post_code %>
    <%= f.hidden_field :shipping_address %>
    <%= f.hidden_field :shipping_name %>
    <%= f.hidden_field :customer_id %>
    <%= f.hidden_field :postage %>
    <%= f.hidden_field :payment_method %>
    <%= f.hidden_field :total_price, :value => @total_price %>
    <%= f.hidden_field :status %>
    <%= f.submit '注文を確定する',class: "btn btn-success" %>
  <% end %>