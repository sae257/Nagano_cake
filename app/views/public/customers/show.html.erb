
<div class="row">
  <h2>マイページ</h2>
  <p><strong class="information-link">登録情報</strong>
    <%= link_to "編集",customers_infomation_edit_path %>
  </p>

    <table>
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= full_name(@customer) %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= kana_full_name(@customer) %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
    <div class="mypage-bottoms">
      <p><strong class="shipping_link">配送先</strong>
        <%= link_to "一覧を見る", customers_shipping_addresses_path, class: "btn" %>
      </p>
      <p><strong class="order_link">配送先</strong>
        <%= link_to "一覧を見る", customers_orders_path, class: "btn" %>
      </p>
    </div>

</div>

