
<div class="row">

  <h2>会員情報編集</h2>
    <%= form_with model: @customer, method: :put do |f| %>


      <div class="form-group">
        <%= f.label :"氏名" %>
        <%= f.text_field :family_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="form-group">
        <%= f.label :"フリガナ" %>
        <%= f.text_field :family_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
　　　<div class="form-group">
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :"郵便番号" %>
        <%= f.text_field :post_code %>
      </div>
      <div class="form-group">
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <%= f.label :"電話番号" %>
        <%= f.text_field :phone %>
      </div>
        <%= f.submit "編集内容を保存", class: "btn" %>
        <%= link_to '退会', unsubscribe_customers_path, class: "btn" %>
    <% end %>


</div>