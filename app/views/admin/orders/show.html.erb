
<h2>注文履歴詳細</h2>
　　<div class="row">

　　      <div class="field">
			        購入者
			      <div>
		          <%= @order.customer.full_name %>
		         </div>
		        </div>
　　      </div>

　　      <div class="field">
	          <div>
	            配送先
	          </div>
	          <div>
	            〒<%= @order.shipping_post_code %>
         			 <%= @order.shipping_address %>
	          </div>
	        </div>

	        <div class="field">
	          <div>
	            支払方法
	          </div>
	          <div>
	            <%= @order.payment_method %>
	          </div>
	        </div>
          <div>注文ステータス</div>
          <div>
	          <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
            <%= f.select :status, Order.statuses.keys %>
            <%= f.submit '更新' ,class: "btn" %>
            <% end %>
          </div>

    <div>
      <table>
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価（税込み）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製造ステータス</th>
          </tr>
        </thead>

        <tbody>
				  <% if flash[:notice] %>
		        <div class="flash">
		          <%= flash[:notice] %>
		        </div>
	        <% end %>

         <% @order_items.each do |order_item| %>
					<tr>
			      <td class="text">
			        <%= order_item.item.name %>
			      </td>
			      <td class="text">
			         ¥<%= order_item.purchase_price.to_s(:delimited) %>
			      </td>
			      <td class="text">
			         <%= order_item.quantity %>
			      </td>
			      <td class="text">
			         ¥<%= order_item.subtotal.to_s(:delimited) %>
			      </td>
			      <td>
			         <%= form_with model: order_item, url: admin_order_order_item_path(order_item),　method: :patch do |f| %>
			         <%= f.select :produciton_status, OrderItem.production_statuses.keys %>
			         <%= f.submit '更新', class: "btn" %>
			      </td>
			         <% end %>
			    </tr>
				<% end %>

				</tbody>
			</table>
    </div>

    <div>
			<table>
				<tr>
          <th class="info">商品合計</th>
					  <td>¥<%= @order.total_price - 800 %></td>
				</tr>
				<tr>
					<th class="info">送料</th>
					  <td>¥<%= @order.postage %></td>
				</tr>
				<tr>
					<th class="info">請求金額合計</th>
					  <td>¥<%= @order.total_price %></td>
				</tr>
		  </table>
	  </div>
</div>



