<% provide(:title, "注文履歴詳細") %>
<h2 class="head-line title_h2 text-center">注文履歴詳細</h2>
　　<div class="row">
　　  <div class="col-xs-12">
　　    <div class="col-xs-9">

　　      <div class="field">
　　        <div class="col-xs-4">
			        購入者
		        </div>
　　        <div class="col-xs-8">
		          <%= @order.name %>
		        </div>
　　      </div>

　　      <div class="field">
	          <div class="col-xs-4">
	            配送先
	          </div>
	          <div class="col-xs-8">
	            <%= full_address(@order) %>
	          </div>
	        </div>

	        <div class="field">
	          <div class="col-xs-4">
	            支払方法
	          </div>
	          <div class="col-xs-8">
	            <%= @order.payment_method %>
	          </div>
	        </div>

	        <%= form_for(@order, url: admin_order_path, method: :patch) do |f| %>
 	          <div class="col-xs-4">注文ステータス
 	          </div>
      	  <div class="col-xs-6">
            <%= f.select :status, Order.statuses.keys, class: "status" %>
          </div>

          <div class="actions">
            <div class="col-xs-2"><%= f.submit '更新'  ,class: "btn btn-primary" %>
            </div>
            <% end %>
          </div>

    <div class="buyer-order col-xs-9">
      <table class="table table-hover table-bordered table-inverse">
        <thead>
          <tr class="info">
            <th class="col-xs-4">商品名</th>
            <th>単価（税込み）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製造ステータス</th>
          </tr>
        </thead>

        <tbody>
				  <% if flash[:notice] %>
		        <div class="flash">
		          <%= flash[:notice] %>
		        </div>
	        <% end %>

        <% @order_items.each do |order_item| %>
					<tr>
			      <td class="text-left">
			        <%= order_item.product.name %>
			      </td>
			      <td class="text-right">
			         ¥<%= tax_price(order_item.product.tax_out_price).to_s(:delimited) %>
			      </td>
			      <td class="text-right">
			         <%= order_item.quantity %>
			      </td>
			      <td class="text-right">
			         ¥<%= sub_price(order_item).to_s(:delimited) %>
			      </td>
			         <%= form_for(order_item, url: admin_order_items_path(order_item), method: :patch) do |f| %>
			      <td>
			         <%= f.select :produciton_status, OrderItem.produciton_statuses.keys, class: "status" %>
			         <%= f.submit '更新'  ,class: "btn btn-warning" %>
			      </td>
			         <% end %>
			    </tr>
				<% end %>

				</tbody>
			</table>
    </div>

    <div class="col-xs-3  billing">
			<table class="table table-hover table-bordered table-condensed">
				<tr>
          <th class="info">商品合計</th>
					  <td>¥<%= total_price(@order_items).to_s(:delimited) %></td>
				</tr>
				<tr>
					<th class="info">送料</th>
					  <td>¥<%= @order.postage.to_s(:delimited) %></td>
				</tr>
				<tr>
					<th class="info">請求金額合計</th>
					  <td>¥<%= @order.total_price.to_s(:delimited) %></td>
				</tr>
		  </table>
	  </div>
      <div class="col-xs-12">
        <%= link_to "戻る", admin_orders_path, class: "glyphicon glyphicon-home btn btn-info" %>
      </div>
	  </div>
  </div>
</div>



